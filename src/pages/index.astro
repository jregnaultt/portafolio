---
import Layout from "@/layouts/Layout.astro";
import Hero from "@/components/Hero.astro";
import Experience from "@/components/Experience.astro";
import Projects from "@/components/Projects.astro";
import SectionContainer from "@/components/SectionContainer.astro";
import { Briefcase, Code } from "lucide-react";
---

<Layout
  title="Porfatolio de Javier Regnault - Desarrollador y Programador Web con experencia en PHP y Laravel"
  description="Contrata a Javier Regnault para crear tu aplicación web o móvil. Especializado en PHP, Laravel, Next.js y Astro."
>
  <main class="px-4">
    <SectionContainer class="py-24 md:py-36">
      <Hero />
    </SectionContainer>

    <SectionContainer id="experiencia" class="pb-22">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80"
      >
        <Briefcase className="size-7" />
        Experiencia Laboral
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="proyectos" class="pb-22">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80"
      >
        <Code className="size-7" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>
    <!-- TODO: About Section -->
  </main>
</Layout>
